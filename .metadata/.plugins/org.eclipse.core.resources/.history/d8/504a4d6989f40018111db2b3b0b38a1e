public class Test {

	public static void main(String[] args) {
		Person jiro = new Person();
		jiro.name = "木村次郎";
		jiro.age = 18;

		Person hanako = new Person();
		hanako.name = "鈴木花子";
		hanako.age = 16;

		Person shun = new Person();
		shun.name = "佐々木駿";
		shun.age = 26;

		System.out.println(jiro.name + ":" + jiro.age);
		System.out.println(hanako.name + ";" + hanako.age);
		System.out.println(shun.name + ":" + shun.age);
	}

}
